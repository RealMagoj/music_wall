<div class="tracks">
  <h1 class="the_wall"><strong>The Wall</strong></h1>
  <% @tracks.each do |track| %>
    <div class="track">
      <h3 class="title">
        <a href="/tracks/<%= track.id %>"><%= track.title %></a>
      </h3>
      <div class="artist">
        <small>(by: <%= track.artist %>)</small>
      </div>
      <div class="url">
        <a href="<%= track.url %>"><%= track.url %></a>
      </div>
    </div>
  <% end %>
  <hr/>
  <h2 class="post_track"><a class="post_track_colour" href="/tracks/new">Post a track...</a>
  </h2>
</div>