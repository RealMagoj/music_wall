<h1><%= @track.title %></h1>

<p>
  Artist: <%= @track.artist %>
</p>

<p>
  <a href="<%= @track.url %>"><%= @track.url %></a>
</p>

<p>
  <small>Created at: <%= @track.created_at %></small>
</p>

<hr/>

<h3>Other tracks from this artist</h3>  
<% Track.where(artist: @track.artist).each do |track| %>
  <div class="track">
    <p>
      <a href="/tracks/<%= track.id %>"><%= track.title %></a>
    </p>
  </div>
<% end %>

<hr/>
<a href="/tracks">Back to All Tracks</a>